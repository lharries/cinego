<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="AnchorPane" prefHeight="750.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EmployeeHomeController">
   <children>
      <ImageView fx:id="backgroundImg" fitHeight="750.0" fitWidth="1280.0" opacity="0.2" pickOnBounds="true" preserveRatio="true">
         <!--<image>-->
         <!--<Image url="@../resources/cinemaWallpaperTest.png" backgroundLoading="true" />-->
         <!--</image>-->
         <effect>
            <ColorAdjust saturation="-0.88" />
         </effect>
      </ImageView>
      <TableView fx:id="ScreeningsTable" layoutX="154.0" layoutY="297.0" prefHeight="360.0" prefWidth="1019.0" />
      <TableView fx:id="table" layoutX="150.0" layoutY="75.0" prefHeight="160.0" prefWidth="1019.0" />
      <Label layoutX="154.0" layoutY="67.0" text="Movies" />

      <Button fx:id="exportCSVHandler" layoutX="886.0" layoutY="503.0" mnemonicParsing="false" onAction="#exportToCSV" prefHeight="32.0" prefWidth="115.0" text="export" />
      <Button fx:id="toSeatBooking" layoutX="1008.0" layoutY="210.0" mnemonicParsing="false" onAction="#openSeatsBooked" text="view seat booking" />

      <HBox fx:id="hBox" layoutX="400.0" layoutY="503.0">
         <TextField fx:id="addID" layoutX="1054.0" layoutY="503.0" prefWidth="118.0" promptText="id" />
         <TextField fx:id="addTitle" layoutX="1054.0" layoutY="503.0" prefWidth="118.0" promptText="title" />
         <TextField fx:id="addImagePath" layoutX="1054.0" layoutY="503.0" onAction="#createMovie" prefWidth="118.0" promptText="image URL" />
         <TextField fx:id="addDescription" layoutX="1054.0" layoutY="503.0" onAction="#createMovie" prefWidth="118.0" promptText="description" />
         <Button fx:id="CreateMovieButton" layoutX="1054.0" layoutY="503.0" mnemonicParsing="false" onAction="#createMovie" prefWidth="118.0" text="Add movie" />
      </HBox>

   </children>
</AnchorPane>
