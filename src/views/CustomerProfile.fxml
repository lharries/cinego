<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="750.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.CustomerProfileController">
    <children>

        <!--Background image-->
        <ImageView fx:id="backgroundImg" fitHeight="750.0" fitWidth="1280.0" opacity="0.2" pickOnBounds="true">
            <image>
                <Image backgroundLoading="true" url="@../resources/cinWallpaperSML.jpg"/>
            </image>
            <effect>
                <ColorAdjust saturation="-0.88"/>
            </effect>
        </ImageView>
        <Rectangle fx:id="rect1" fill="#2f3c4d" height="10.0" stroke="TRANSPARENT" strokeType="INSIDE" width="1280.0"/>
        <Rectangle fx:id="rect" fill="#868c94" height="2.5" layoutX="640.0" stroke="TRANSPARENT" strokeType="INSIDE"
                   width="640.0"/>

        <!--071625-->
        <!--596679-->

        <Group layoutX="149.0" layoutY="229.0">
            <children>

                <!--Customer profile details-->
                <Button fx:id="editProfileBttn" layoutX="42.0" layoutY="180.0" mnemonicParsing="false"
                        onAction="#setCustProfileEditable" text="Edit profile"/>
                <TextField fx:id="custFirstNameField" editable="false" layoutX="1.0" layoutY="23.0"
                           promptText="First name"/>
                <TextField fx:id="custLastNameField" editable="false" layoutX="1.0" layoutY="82.0"
                           promptText="Last name"/>
                <TextField fx:id="custEmailField" editable="false" layoutX="1.0" layoutY="143.0"
                           promptText="you@gmail.com"/>
                <Button fx:id="cancelUpdatingProfileBttn" disable="true" layoutX="2.0" layoutY="216.0"
                        mnemonicParsing="false" onAction="#cancelUpdating" text="Cancel"/>
                <Button fx:id="updateProfileBttn" layoutX="96.0" layoutY="216.0" mnemonicParsing="false"
                        onAction="#updateCustomerProfile" text="update"/>
                <Label layoutX="1.0" layoutY="58.0" text="Last name"/>
                <Label text="First name"/>
                <Label layoutX="4.0" layoutY="118.0" text="E-Mail Address"/>
            </children>
        </Group>
        <Label layoutX="484.0" layoutY="101.0" prefHeight="17.0" prefWidth="180.0" text="Your booking history"/>

        <!--Bookings table-->
        <TableView fx:id="bookingsTable" layoutX="483.0" layoutY="134.0" onMouseClicked="#getSelectedBooking"
                   prefHeight="488.0" prefWidth="711.0">
            <columns>
                <TableColumn fx:id="titleColBookingTable" prefWidth="223.2364501953125" text="Title"/>
                <TableColumn fx:id="dateColBookingTable" prefWidth="389.2635498046875" text="Date"/>
                <TableColumn fx:id="seatsColBookingTable" prefWidth="98.0325927734375" text="Seats"/>
            </columns>
        </TableView>
        <Button fx:id="deleteBooking" disable="true" layoutX="1083.0" layoutY="647.0" mnemonicParsing="false"
                onAction="#deleteMovieBooking" text="Delete"/>
        <Label layoutX="144.0" layoutY="101.0" prefHeight="17.0" prefWidth="180.0" text="Your Profile"/>

    </children>
</AnchorPane>
