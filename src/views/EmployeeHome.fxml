<AnchorPane fx:id="AnchorPane" prefHeight="750.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EmployeeHomeController">
   <children>

   <!--Background image-->
      <ImageView fx:id="backgroundImg" fitHeight="750.0" fitWidth="1280.0" opacity="0.2" pickOnBounds="true" preserveRatio="true">
         <image>
         <Image backgroundLoading="true" url="@../resources/cinBackgroundSML.jpg" />
         </image>
         <effect>
            <ColorAdjust saturation="-0.88" />
         </effect>
      </ImageView>

   <!--TESTING IMAGE UPLOAD-->
      <!--<ImageView fx:id="moviePoster" fitHeight="100.0" fitWidth="100.0" opacity="0.7" pickOnBounds="true" preserveRatio="true">-->
            <!--&lt;!&ndash;<Image url="@../resources/cinWallpaper.png" backgroundLoading="false" />&ndash;&gt;-->
      <!--</ImageView>-->

      <!--Screening table, screening creation HBox-->
      <TableView fx:id="screeningsTable" layoutX="700.0" layoutY="60.0" onMouseClicked="#getScreeningID" prefHeight="317.0" prefWidth="526.0">
         <columns>
            <TableColumn fx:id="titleColScreenTab" prefWidth="176.66278076171875" text="Title" />
            <TableColumn fx:id="dateColScreenTab" prefWidth="200.2381591796875" text="Date" />
            <TableColumn fx:id="timeColScreenTab" minWidth="0.0" prefWidth="148.7618408203125" text="Time" />
         </columns>
      </TableView>

   <!--create screening-->
      <HBox fx:id="hBox1" layoutX="717.0" layoutY="429.0" prefHeight="30.0" prefWidth="458.0" spacing="15.0">
         <children>
            <ComboBox fx:id="movieSelectionBox" prefHeight="30.0" prefWidth="271.0" promptText="Movie" />
            <DatePicker fx:id="datePicker" prefHeight="30.0" prefWidth="169.0" promptText="Date" />
         </children>
      </HBox>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="699.0" layoutY="25.0" prefHeight="29.0" prefWidth="527.0" text="Screenings" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

   <!--Movie table, creation HBox-->
      <TableView fx:id="moviesTable" layoutX="50.0" layoutY="60.0" prefHeight="334.0" prefWidth="535.0">
         <columns>
            <TableColumn fx:id="titleCol" prefWidth="158.5" text="Title" />
            <TableColumn fx:id="descriptCol" prefWidth="375.5" text="Description" />
         </columns></TableView>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="51.0" layoutY="25.0" prefHeight="29.0" prefWidth="531.0" text="Movies" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <HBox fx:id="hBox" layoutX="53.0" layoutY="416.0" prefHeight="30.0" prefWidth="534.0" spacing="15.0">
         <TextField fx:id="addTitle" layoutX="1054.0" layoutY="503.0" prefHeight="30.0" prefWidth="339.0" promptText="title" />
         <Button fx:id="moviePosterBttn" layoutX="1008.0" layoutY="210.0" mnemonicParsing="false" onAction="#uploadMovieImage" onKeyPressed="#uploadMovieImage" prefHeight="30.0" prefWidth="153.0" text="Poster upload" />
      </HBox>
      <HBox fx:id="hBox2" layoutX="52.0" layoutY="461.0" prefHeight="232.0" prefWidth="534.0" spacing="15.0">
         <children>
            <ScrollPane prefHeight="203.0" prefWidth="339.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="230.0" prefWidth="337.0">
                     <children>
                        <TextArea fx:id="addDescription" prefHeight="233.0" prefWidth="339.0" promptText="Movie description..." />
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            <Button fx:id="CreateMovieButton" layoutX="1054.0" layoutY="503.0" mnemonicParsing="false" onAction="#movieValidation" prefHeight="30.0" prefWidth="155.0" text="Add movie" />
         </children>
      </HBox>
      <HBox fx:id="hBox11" layoutX="718.0" layoutY="477.0" prefHeight="30.0" prefWidth="516.0" spacing="15.0">
         <children>
            <ComboBox fx:id="timePicker" prefHeight="30.0" prefWidth="271.0" promptText="Time">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="16:00" />
                     <String fx:value="17:00" />
                     <String fx:value="18:00" />
                     <String fx:value="19:00" />
                     <String fx:value="20:00" />
                     <String fx:value="21:00" />
                  </FXCollections>
               </items>
            </ComboBox>
            <Button fx:id="AddScreening" layoutX="1054.0" layoutY="503.0" mnemonicParsing="false" onAction="#validateScreening" prefHeight="30.0" prefWidth="169.0" stylesheets="@../application/application.css" text="Add Screening">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
         </children>
      </HBox>
      <HBox fx:id="hBox12" layoutX="711.0" layoutY="622.0" prefHeight="30.0" prefWidth="506.0" spacing="15.0">
         <children>
            <Button fx:id="toSeatBooking" disable="true" mnemonicParsing="false" onAction="#openSeatsBooked" prefHeight="27.0" prefWidth="168.0" text="view booking" />
            <Button fx:id="deleteBooking" disable="true" mnemonicParsing="false" onAction="#deleteScreening" prefHeight="27.0" prefWidth="157.0" text="delete screening" />
            <Button fx:id="exportCSVHandler" mnemonicParsing="false" onAction="#exportToCSV" prefHeight="30.0" prefWidth="149.0" text="export" />
         </children>
      </HBox>

   </children>
</AnchorPane>
